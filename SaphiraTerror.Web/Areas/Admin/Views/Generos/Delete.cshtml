@model SaphiraTerror.Domain.Entities.Genero
@{
    ViewData["Title"] = "Excluir Gênero";
    bool canDelete = User.IsInRole("Admin") || User.IsInRole("ADMIN") || User.IsInRole("Administrador");
}
<h2 class="mb-3">Excluir Gênero</h2>

@if (!canDelete)
{
    <div class="alert alert-warning">Somente administradores podem excluir.</div>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
}
else
{
    <div class="alert alert-danger">Deseja realmente excluir o gênero <strong>@Model.Nome</strong>?</div>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-danger" type="submit">Excluir</button>
        <a class="btn btn-secondary ms-2" asp-action="Index">Cancelar</a>
    </form>
}