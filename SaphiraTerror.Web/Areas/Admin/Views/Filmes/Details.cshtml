@model SaphiraTerror.Web.Areas.Admin.Models.FilmeEditVm
@{
    ViewData["Title"] = "Detalhes do Filme";
    var genero = ViewBag.GeneroNome as string ?? "-";
    var classificacao = ViewBag.ClassificacaoNome as string ?? "-";
}

<h2 class="mb-3">Detalhes do Filme</h2>

<div class="row g-4">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model?.ImagemCapaUrl))
        {
            <img src="@Model.ImagemCapaUrl" alt="@Model.Titulo" class="img-fluid rounded shadow-sm" />
        }
        else
        {
            <div class="border rounded d-flex align-items-center justify-content-center" style="height:320px;">
                <span class="text-muted">Sem capa</span>
            </div>
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Ano</dt>
            <dd class="col-sm-9">@Model.Ano</dd>

            <dt class="col-sm-3">Gênero</dt>
            <dd class="col-sm-9">@genero</dd>

            <dt class="col-sm-3">Classificação</dt>
            <dd class="col-sm-9">@classificacao</dd>
        </dl>

        <h5 class="mt-3">Sinopse</h5>
        <p class="text-muted">@(!string.IsNullOrWhiteSpace(Model.Sinopse) ? Model.Sinopse : "—")</p>

        <div class="mt-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-secondary ms-2" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>
